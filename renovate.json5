{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "config:best-practices"
  ],
  "packageRules": [
    // Bundle opentelemetry packages in a single PR
    {
      "matchPackageNames": "tracing-opentelemetry",
      "groupName": "opentelemetry-rust monorepo"
    },
    // Don't pin digest in inspircd image tag
    {
      "matchManagers": ["docker-compose"],
      "matchPackageNames": ["inspircd/inspircd-docker"],
      "versioning": "semver",
      "pinDigests": false
    },
    // Don't pin official GitHub Actions versions
    {
      "matchDepTypes": ["action"],
      "matchPackageNames": ["actions/cache", "actions/checkout"],
      "pinDigests": false,
    },
    // Don't pin the images used in the Dockerfile
    {
      "matchDatasources": ["docker"],
      "pinDigests": false
    }
  ]
}
